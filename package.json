{
  "name": "globekitchen",
  "private": true,
  "packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef",
  "workspaces": [
    "apps/*",
    "packages/*",
    "server"
  ],
  "engines": {
    "node": ">=18.17 <23",
    "pnpm": ">=10.17.0"
  },
  "scripts": {
    "preinstall": "node -e \"if(!process.env.npm_execpath||!process.env.npm_execpath.includes('pnpm')){console.error('âœ– Use pnpm in this repo (run: corepack enable && pnpm i)');process.exit(1)}\"",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter web start",
    "dev:web": "pnpm --filter web dev",
    "dev:web:4200": "pnpm --filter web dev -- -p 4200",
    "dev:server": "pnpm --filter server dev",
    "build:web": "pnpm --filter web build",
    "build:server": "pnpm --filter server build",
    "dev:apis": "concurrently -n server,api -c green,blue \"cross-env PORT=4100 pnpm --filter ./server dev\" \"cross-env PORT=4200 pnpm --filter ./apps/api dev\""
  },
  "pnpm": {
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "@swc/helpers": "0.5.17"
    },
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "@tailwindcss/oxide",
      "bcrypt",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.17",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "prisma": "^5.22.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0"
  }
}
