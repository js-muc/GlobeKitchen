{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,             // <â€” add this to unblock TS7006
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "declaration": false,
    "sourceMap": false,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["prisma","src/__tests__/**/*","**/*.test.ts"]
}
