generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  role      UserRole? @default(STAFF)
}

model Employee {
  id              Int               @id @default(autoincrement())
  name            String
  role            EmployeeRole      @default(WAITER)
  type            EmployeeType      @default(INSIDE)
  tableCode       TableCode?
  phone           String?
  active          Boolean           @default(true)
  createdAt       DateTime          @default(now())
  salaryMonthly   Decimal           @default(0) @db.Decimal(10, 2)
  fieldDispatches FieldDispatch[]
  payrollLines    PayrollLine[]
  deductions      SalaryDeduction[]
  tableSales      TableSale[]

  // NEW – optional link to a commission plan
  commissionPlanId Int? 
  commissionPlan   CommissionPlan? @relation(fields: [commissionPlanId], references: [id])
}

model MenuItem {
  id                Int             @id @default(autoincrement())
  name              String          @unique
  category          String?
  unit              String          @default("unit")
  priceSell         Decimal         @db.Decimal(10, 2)
  costUnit          Decimal?        @db.Decimal(10, 2)
  active            Boolean         @default(true)
  createdAt         DateTime        @default(now())
  lowStockThreshold Decimal?        @db.Decimal(16, 3)
  convFrom          Conversion[]    @relation("from")
  convTo            Conversion[]    @relation("to")
  FieldDispatch     FieldDispatch[]
  stockMovements    StockMovement[]
  TableSale         TableSale[]
}

model Conversion {
  id         Int      @id @default(autoincrement())
  fromItemId Int
  toItemId   Int
  factor     Decimal  @db.Decimal(10, 2)
  fromItem   MenuItem @relation("from", fields: [fromItemId], references: [id])
  toItem     MenuItem @relation("to", fields: [toItemId], references: [id])
}

model StockMovement {
  id              Int               @id @default(autoincrement()) @map("id")
  itemId          Int               @map("item_id")
  direction       MovementDirection @map("direction")
  quantity        Int               @map("quantity")
  unitCost        Decimal?          @map("unit_cost") @db.Decimal(10, 2)
  note            String?           @map("note")
  createdAt       DateTime          @default(now()) @map("created_at")
  kind            StockMoveKind     @default(PURCHASE) @map("kind")
  date            DateTime          @default(now()) @map("date")
  qty             Decimal           @default(0) @map("qty") @db.Decimal(12, 2)
  totalCost       Decimal           @default(0) @map("total_cost") @db.Decimal(12, 2)
  createdByUserId Int?              @map("created_by_user_id")
  meta            Json?             @map("meta")
  item            MenuItem          @relation(fields: [itemId], references: [id], map: "StockMovement_itemId_fkey")

  @@index([direction])
  @@index([createdAt], map: "StockMovement_createdAt_idx")
  @@index([itemId, createdAt], map: "StockMovement_itemId_createdAt_idx")
  @@map("StockMovement")
}

model TableSale {
  id        Int       @id @default(autoincrement())
  date      DateTime
  waiterId  Int
  tableCode TableCode
  itemId    Int
  qty       Decimal   @db.Decimal(10, 2)
  priceEach Decimal   @db.Decimal(10, 2)
  discount  Decimal   @default(0) @db.Decimal(10, 2)
  lossQty   Decimal   @default(0) @db.Decimal(10, 2)
  note      String?
  createdAt DateTime  @default(now())
  item      MenuItem  @relation(fields: [itemId], references: [id])
  waiter    Employee  @relation(fields: [waiterId], references: [id])
}

model FieldDispatch {
  id            Int          @id @default(autoincrement())
  date          DateTime
  waiterId      Int
  itemId        Int
  qtyDispatched Decimal      @db.Decimal(10, 2)
  priceEach     Decimal      @db.Decimal(10, 2)
  createdAt     DateTime     @default(now())
  item          MenuItem     @relation(fields: [itemId], references: [id])
  waiter        Employee     @relation(fields: [waiterId], references: [id])
  return        FieldReturn?
}

model FieldReturn {
  id            Int           @id @default(autoincrement())
  dispatchId    Int           @unique
  qtyReturned   Decimal       @db.Decimal(10, 2)
  lossQty       Decimal       @default(0) @db.Decimal(10, 2)
  cashCollected Decimal       @db.Decimal(10, 2)
  note          String?
  createdAt     DateTime      @default(now())
  dispatch      FieldDispatch @relation(fields: [dispatchId], references: [id])
}

model SalaryDeduction {
  id              Int             @id @default(autoincrement())
  employeeId      Int
  date            DateTime        @default(now())
  amount          Decimal         @db.Decimal(10, 2)
  reason          DeductionReason
  note            String?
  meta            Json?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  createdByUserId Int?
  employee        Employee        @relation(fields: [employeeId], references: [id])

  @@index([employeeId, date])
  @@index([reason, date])
}

model PayrollRun {
  id              Int           @id @default(autoincrement())
  periodYear      Int
  periodMonth     Int
  runAt           DateTime      @default(now())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  createdByUserId Int?
  lines           PayrollLine[]

  @@unique([periodYear, periodMonth], name: "unique_period")
}

model PayrollLine {
  id                Int        @id @default(autoincrement())
  payrollRunId      Int
  employeeId        Int
  gross             Decimal    @db.Decimal(10, 2)
  deductionsApplied Decimal    @db.Decimal(10, 2)
  carryForward      Decimal    @db.Decimal(10, 2)
  netPay            Decimal    @db.Decimal(10, 2)
  note              String?
  createdAt         DateTime   @default(now())
  employee          Employee   @relation(fields: [employeeId], references: [id])
  payrollRun        PayrollRun @relation(fields: [payrollRunId], references: [id], onDelete: Cascade)

  @@index([payrollRunId])
  @@index([employeeId])
}

model Shift {
  id           Int          @id @default(autoincrement())
  date         DateTime     @db.Date
  employeeId   Int
  waiterType   WaiterType
  openedAt     DateTime
  closedAt     DateTime?
  openingFloat Decimal?     @db.Decimal(12, 2)
  notes        String?
  tableCode    String?
  route        String?
  grossSales   Decimal      @default(0) @db.Decimal(12, 2)
  discounts    Decimal      @default(0) @db.Decimal(12, 2)
  returnsValue Decimal      @default(0) @db.Decimal(12, 2)
  netSales     Decimal      @default(0) @db.Decimal(12, 2)
  cashRemit    Decimal      @default(0) @db.Decimal(12, 2)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  lines        SaleLine[]
  cashup       ShiftCashup?
  adjustments  StockAdj[]

  @@index([date, employeeId])
}

model SaleLine {
  id           Int      @id @default(autoincrement())
  shiftId      Int
  date         DateTime @db.Date
  itemId       Int
  qty          Decimal  @db.Decimal(12, 2)
  unit         String
  unitPrice    Decimal  @db.Decimal(12, 2)
  total        Decimal  @db.Decimal(12, 2)
  tableCode    String?
  note         String?
  createdAt    DateTime @default(now())
  shift        Shift    @relation(fields: [shiftId], references: [id])

  // NEW – optional commission fields per sale
  commissionEarned Decimal? @db.Decimal(10, 2)
  commissionRate   Decimal? @db.Decimal(5, 2)

  @@index([shiftId, date])
}

model StockAdj {
  id        Int          @id @default(autoincrement())
  shiftId   Int
  date      DateTime     @db.Date
  itemId    Int
  kind      StockAdjKind
  qty       Decimal      @db.Decimal(12, 2)
  unit      String
  unitCost  Decimal?     @db.Decimal(12, 2)
  note      String?
  createdAt DateTime     @default(now())
  shift     Shift        @relation(fields: [shiftId], references: [id])

  @@index([shiftId, date])
}

model ShiftCashup {
  id          Int      @id @default(autoincrement())
  shiftId     Int      @unique
  snapshot    Json
  note        String?
  submittedBy String?
  createdAt   DateTime @default(now())
  shift       Shift    @relation(fields: [shiftId], references: [id])

  @@index([createdAt])
}

// NEW – Commission Plan model and enum ---------------------------------------
model CommissionPlan {
  id           Int              @id @default(autoincrement())
  name         String            @unique
  role         CommissionRole
  isDefault    Boolean           @default(false)
  bracketsJson Json
  createdAt    DateTime          @default(now())
  employees    Employee[]
}

enum CommissionRole {
  INSIDE
  FIELD
}

