enum EmployeeRole {
  KITCHEN
  WAITER
  CHEF
  CASHIER
  MANAGER
}

enum EmployeeType {
  INSIDE
  FIELD
  KITCHEN
}

enum TableCode {
  A6
  A7
  A8
  A9
}

enum MovementDirection {
  IN
  OUT
}

enum StockMoveKind {
  PURCHASE
  USAGE
  ADJUSTMENT
  CONVERSION
}

enum DeductionReason {
  ADVANCE
  BREAKAGE
  LOSS
  OTHER
}

enum WaiterType {
  INSIDE
  FIELD
}

enum StockAdjKind {
  TAKE
  ADD
  RETURN
}

enum UserRole {
  ADMIN
  STAFF
}
