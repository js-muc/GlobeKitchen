// =================== Prisma Config ===================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =================== Enums ===================
enum EmployeeRole {
  WAITER
  CHEF
  CASHIER
  MANAGER
  KITCHEN
}

enum EmployeeType {
  INSIDE
  FIELD
  KITCHEN
}

enum TableCode {
  A6
  A7
  A8
  A9
}

enum MovementDirection {
  IN
  OUT
}

// --- NEW: unified deduction reasons ---
enum DeductionReason {
  ADVANCE   // salary advance
  BREAKAGE  // waiter broke an item
  LOSS      // operational loss attributable to waiter
  OTHER
}

// =================== Models ===================
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Employee {
  id              Int                 @id @default(autoincrement())
  name            String
  role            EmployeeRole        @default(WAITER)
  type            EmployeeType        @default(INSIDE)
  tableCode       TableCode?
  phone           String?
  active          Boolean             @default(true)
  createdAt       DateTime            @default(now())

  // --- NEW: monthly salary used by payroll runs ---
  salaryMonthly   Decimal             @default(0) @db.Decimal(10, 2)

  // --- UPDATED relations: unified ledger + payroll lines ---
  deductions      SalaryDeduction[]
  payrollLines    PayrollLine[]

  // existing relations (unchanged)
  tableSales      TableSale[]
  fieldDispatches FieldDispatch[]

  // daily sales shifts (explicit backref)
  shifts          Shift[]
}

model MenuItem {
  id             Int             @id @default(autoincrement())
  name           String          @unique
  category       String?
  unit           String          @default("unit")
  priceSell      Decimal         @db.Decimal(10, 2)
  costUnit       Decimal?        @db.Decimal(10, 2)
  active         Boolean         @default(true)
  createdAt      DateTime        @default(now())
  stockMovements StockMovement[]
  convFrom       Conversion[]    @relation("from")
  convTo         Conversion[]    @relation("to")
  TableSale      TableSale[]
  FieldDispatch  FieldDispatch[]
  // daily sales lines / adjustments (explicit backrefs)
  saleLines      SaleLine[]
  stockAdjs      StockAdj[]
}

model Conversion {
  id         Int      @id @default(autoincrement())
  fromItem   MenuItem @relation("from", fields: [fromItemId], references: [id])
  fromItemId Int
  toItem     MenuItem @relation("to", fields: [toItemId], references: [id])
  toItemId   Int
  factor     Decimal  @db.Decimal(10, 2) // e.g. thermos->cups (10 or 9)
}

model StockMovement {
  id        Int               @id @default(autoincrement())
  item      MenuItem          @relation(fields: [itemId], references: [id])
  itemId    Int
  direction MovementDirection
  quantity  Int
  unitCost  Decimal?          @db.Decimal(10, 2)
  note      String?
  createdAt DateTime          @default(now())

  @@index([itemId, createdAt])
  @@index([direction])
  @@index([createdAt])
}

model TableSale {
  id        Int       @id @default(autoincrement())
  date      DateTime
  waiter    Employee  @relation(fields: [waiterId], references: [id])
  waiterId  Int
  tableCode TableCode
  item      MenuItem  @relation(fields: [itemId], references: [id])
  itemId    Int
  qty       Decimal   @db.Decimal(10, 2)
  priceEach Decimal   @db.Decimal(10, 2)
  discount  Decimal   @default(0) @db.Decimal(10, 2)
  lossQty   Decimal   @default(0) @db.Decimal(10, 2)
  note      String?
  createdAt DateTime  @default(now())
}

model FieldDispatch {
  id            Int          @id @default(autoincrement())
  date          DateTime
  waiter        Employee     @relation(fields: [waiterId], references: [id])
  waiterId      Int
  item          MenuItem     @relation(fields: [itemId], references: [id])
  itemId        Int
  qtyDispatched Decimal      @db.Decimal(10, 2)
  priceEach     Decimal      @db.Decimal(10, 2)
  createdAt     DateTime     @default(now())
  return        FieldReturn?
}

model FieldReturn {
  id            Int           @id @default(autoincrement())
  dispatch      FieldDispatch @relation(fields: [dispatchId], references: [id])
  dispatchId    Int           @unique
  qtyReturned   Decimal       @db.Decimal(10, 2)
  lossQty       Decimal       @default(0) @db.Decimal(10, 2)
  cashCollected Decimal       @db.Decimal(10, 2)
  note          String?
  createdAt     DateTime      @default(now())
}

// =================== NEW UNIFIED LEDGER + PAYROLL ===================

model SalaryDeduction {
  id              Int             @id @default(autoincrement())
  employeeId      Int
  date            DateTime        @default(now())
  amount          Decimal         @db.Decimal(10, 2) // > 0
  reason          DeductionReason
  note            String?
  meta            Json?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  createdByUserId Int?

  employee        Employee        @relation(fields: [employeeId], references: [id])

  @@index([employeeId, date])
  @@index([reason, date])
}

model PayrollRun {
  id              Int          @id @default(autoincrement())
  periodYear      Int
  periodMonth     Int
  runAt           DateTime     @default(now())
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  createdByUserId Int?

  lines           PayrollLine[]

  @@unique([periodYear, periodMonth], name: "unique_period")
}

model PayrollLine {
  id                 Int         @id @default(autoincrement())
  payrollRunId       Int
  employeeId         Int

  gross              Decimal     @db.Decimal(10, 2) // snapshot of salaryMonthly
  deductionsApplied  Decimal     @db.Decimal(10, 2) // <= gross
  carryForward       Decimal     @db.Decimal(10, 2) // >= 0
  netPay             Decimal     @db.Decimal(10, 2) // gross - deductionsApplied

  note               String?
  createdAt          DateTime    @default(now())

  payrollRun         PayrollRun  @relation(fields: [payrollRunId], references: [id], onDelete: Cascade)
  employee           Employee    @relation(fields: [employeeId], references: [id])

  @@index([payrollRunId])
  @@index([employeeId])
}

// --- Daily Sales -------------------------------------------------------------

enum WaiterType {
  INSIDE
  FIELD
}

enum StockAdjKind {
  TAKE     // items given to field waiter
  ADD      // extra items added later for field waiter
  RETURN   // items returned unsold by field waiter
}

model Shift {
  id            Int         @id @default(autoincrement())
  date          DateTime    @db.Date
  employeeId    Int
  waiterType    WaiterType
  openedAt      DateTime
  closedAt      DateTime?
  openingFloat  Decimal?    @db.Decimal(12, 2)
  notes         String?

  // inside only
  tableCode     String?

  // field only (optional meta)
  route         String?

  // denormalized money summary for fast queries
  grossSales    Decimal      @default(0) @db.Decimal(12, 2)
  discounts     Decimal      @default(0) @db.Decimal(12, 2)
  returnsValue  Decimal      @default(0) @db.Decimal(12, 2)
  netSales      Decimal      @default(0) @db.Decimal(12, 2)
  cashRemit     Decimal      @default(0) @db.Decimal(12, 2)

  // relations
  employee      Employee     @relation(fields: [employeeId], references: [id])
  lines         SaleLine[]
  adjustments   StockAdj[]

  // NEW: back-reference to cash-up snapshot (one-per-shift design)
  cashup        ShiftCashup?

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([date, employeeId])
  @@index([date, waiterType])
}

model SaleLine {
  id          Int       @id @default(autoincrement())
  shiftId     Int
  date        DateTime  @db.Date
  itemId      Int
  qty         Decimal   @db.Decimal(12, 2)
  unit        String
  unitPrice   Decimal   @db.Decimal(12, 2)
  total       Decimal   @db.Decimal(12, 2) // qty * unitPrice snapshot
  tableCode   String?
  note        String?
  createdAt   DateTime  @default(now())

  shift       Shift     @relation(fields: [shiftId], references: [id])
  item        MenuItem  @relation(fields: [itemId], references: [id])

  @@index([shiftId, date])
  @@index([itemId])
}

model StockAdj {
  id          Int           @id @default(autoincrement())
  shiftId     Int
  date        DateTime      @db.Date
  itemId      Int
  kind        StockAdjKind
  qty         Decimal       @db.Decimal(12, 2)
  unit        String
  unitCost    Decimal?      @db.Decimal(12, 2)
  note        String?
  createdAt   DateTime      @default(now())

  shift       Shift         @relation(fields: [shiftId], references: [id])
  item        MenuItem      @relation(fields: [itemId], references: [id])

  @@index([shiftId, date])
  @@index([itemId])
}

// ------------------- NEW: Cash-up snapshots -------------------
model ShiftCashup {
  id          Int      @id @default(autoincrement())
  shiftId     Int      @unique
  snapshot    Json
  note        String?  @db.Text
  submittedBy String?
  createdAt   DateTime @default(now())

  shift       Shift    @relation(fields: [shiftId], references: [id])

  @@index([createdAt])
}
