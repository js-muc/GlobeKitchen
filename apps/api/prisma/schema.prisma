// =================== Prisma Config ===================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =================== Enums ===================
enum EmployeeRole {
  WAITER
  CHEF
  CASHIER
  MANAGER
  KITCHEN
}

enum EmployeeType {
  INSIDE
  FIELD
  KITCHEN
}

enum TableCode {
  A6
  A7
  A8
  A9
}

enum MovementDirection {
  IN
  OUT
}

// NEW: semantic kind for stock movements (keeps MovementDirection for back-compat)
enum StockMoveKind {
  PURCHASE     // stock in via buying/delivery
  USAGE        // stock out via kitchen usage
  ADJUSTMENT   // manual correction (+/-)
  CONVERSION   // e.g., bulk -> retail (optional future use)
}

// --- NEW: unified deduction reasons ---
enum DeductionReason {
  ADVANCE   // salary advance
  BREAKAGE  // waiter broke an item
  LOSS      // operational loss attributable to waiter
  OTHER
}

// =================== Models ===================
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Employee {
  id              Int                 @id @default(autoincrement())
  name            String
  role            EmployeeRole        @default(WAITER)
  type            EmployeeType        @default(INSIDE)
  tableCode       TableCode?
  phone           String?
  active          Boolean             @default(true)
  createdAt       DateTime            @default(now())
  salaryMonthly   Decimal             @default(0) @db.Decimal(10, 2)

  deductions      SalaryDeduction[]
  payrollLines    PayrollLine[]

  tableSales      TableSale[]
  fieldDispatches FieldDispatch[]
  shifts          Shift[]
}

model MenuItem {
  id             Int             @id @default(autoincrement())
  name           String          @unique
  category       String?
  unit           String          @default("unit")
  priceSell      Decimal         @db.Decimal(10, 2)
  costUnit       Decimal?        @db.Decimal(10, 2)
  active         Boolean         @default(true)
  createdAt      DateTime        @default(now())
  lowStockThreshold Decimal?     @db.Decimal(16, 3)

  stockMovements StockMovement[]
  convFrom       Conversion[]    @relation("from")
  convTo         Conversion[]    @relation("to")
  TableSale      TableSale[]
  FieldDispatch  FieldDispatch[]
  saleLines      SaleLine[]
  stockAdjs      StockAdj[]

  @@index([active, category])
}

model Conversion {
  id         Int      @id @default(autoincrement())
  fromItem   MenuItem @relation("from", fields: [fromItemId], references: [id])
  fromItemId Int
  toItem     MenuItem @relation("to", fields: [toItemId], references: [id])
  toItemId   Int
  factor     Decimal  @db.Decimal(10, 2)
}

// âœ… UPDATED to match actual DB columns
model StockMovement {
  id               Int       @id @default(autoincrement()) @map("id")
  itemId           Int                                      @map("item_id")
  item             MenuItem  @relation(fields: [itemId], references: [id]) 
  direction        MovementDirection                        @map("direction")
  quantity         Int                                      @map("quantity")
  qty              Decimal?  @db.Decimal(16, 3)              @map("qty")
  unitCost         Decimal?  @db.Decimal(10, 2)              @map("unit_cost")
  kind             StockMoveKind     @default(PURCHASE)      @map("kind")
  totalCost        Decimal?  @db.Decimal(12, 2)              @map("total_cost")
  date             DateTime  @default(now())                  @map("date")
  note             String?                                   @map("note")
  createdAt        DateTime  @default(now())                  @map("created_at")
  createdByUserId  Int?                                      @map("created_by_user_id")
  meta             Json?                                     @map("meta")

  @@index([itemId, date])
  @@index([itemId, createdAt])
  @@index([kind, date])
  @@index([direction])
  @@index([createdAt])
  @@map("StockMovement")
}

model TableSale {
  id        Int       @id @default(autoincrement())
  date      DateTime
  waiter    Employee  @relation(fields: [waiterId], references: [id])
  waiterId  Int
  tableCode TableCode
  item      MenuItem  @relation(fields: [itemId], references: [id])
  itemId    Int
  qty       Decimal   @db.Decimal(10, 2)
  priceEach Decimal   @db.Decimal(10, 2)
  discount  Decimal   @default(0) @db.Decimal(10, 2)
  lossQty   Decimal   @default(0) @db.Decimal(10, 2)
  note      String?
  createdAt DateTime  @default(now())
}

model FieldDispatch {
  id            Int          @id @default(autoincrement())
  date          DateTime
  waiter        Employee     @relation(fields: [waiterId], references: [id])
  waiterId      Int
  item          MenuItem     @relation(fields: [itemId], references: [id])
  itemId        Int
  qtyDispatched Decimal      @db.Decimal(10, 2)
  priceEach     Decimal      @db.Decimal(10, 2)
  createdAt     DateTime     @default(now())
  return        FieldReturn?
}

model FieldReturn {
  id            Int           @id @default(autoincrement())
  dispatch      FieldDispatch @relation(fields: [dispatchId], references: [id])
  dispatchId    Int           @unique
  qtyReturned   Decimal       @db.Decimal(10, 2)
  lossQty       Decimal       @default(0) @db.Decimal(10, 2)
  cashCollected Decimal       @db.Decimal(10, 2)
  note          String?
  createdAt     DateTime      @default(now())
}

// =================== NEW UNIFIED LEDGER + PAYROLL ===================
model SalaryDeduction {
  id              Int             @id @default(autoincrement())
  employeeId      Int
  date            DateTime        @default(now())
  amount          Decimal         @db.Decimal(10, 2)
  reason          DeductionReason
  note            String?
  meta            Json?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  createdByUserId Int?

  employee        Employee        @relation(fields: [employeeId], references: [id])

  @@index([employeeId, date])
  @@index([reason, date])
}

model PayrollRun {
  id              Int          @id @default(autoincrement())
  periodYear      Int
  periodMonth     Int
  runAt           DateTime     @default(now())
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  createdByUserId Int?

  lines           PayrollLine[]

  @@unique([periodYear, periodMonth], name: "unique_period")
}

model PayrollLine {
  id                 Int         @id @default(autoincrement())
  payrollRunId       Int
  employeeId         Int
  gross              Decimal     @db.Decimal(10, 2)
  deductionsApplied  Decimal     @db.Decimal(10, 2)
  carryForward       Decimal     @db.Decimal(10, 2)
  netPay             Decimal     @db.Decimal(10, 2)
  note               String?
  createdAt          DateTime    @default(now())

  payrollRun         PayrollRun  @relation(fields: [payrollRunId], references: [id], onDelete: Cascade)
  employee           Employee    @relation(fields: [employeeId], references: [id])

  @@index([payrollRunId])
  @@index([employeeId])
}

// --- Daily Sales -------------------------------------------------------------
enum WaiterType {
  INSIDE
  FIELD
}

enum StockAdjKind {
  TAKE
  ADD
  RETURN
}

model Shift {
  id            Int         @id @default(autoincrement())
  date          DateTime    @db.Date
  employeeId    Int
  waiterType    WaiterType
  openedAt      DateTime
  closedAt      DateTime?
  openingFloat  Decimal?    @db.Decimal(12, 2)
  notes         String?
  tableCode     String?
  route         String?
  grossSales    Decimal      @default(0) @db.Decimal(12, 2)
  discounts     Decimal      @default(0) @db.Decimal(12, 2)
  returnsValue  Decimal      @default(0) @db.Decimal(12, 2)
  netSales      Decimal      @default(0) @db.Decimal(12, 2)
  cashRemit     Decimal      @default(0) @db.Decimal(12, 2)

  employee      Employee     @relation(fields: [employeeId], references: [id])
  lines         SaleLine[]
  adjustments   StockAdj[]
  cashup        ShiftCashup?

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([date, employeeId])
  @@index([date, waiterType])
}

model SaleLine {
  id          Int       @id @default(autoincrement())
  shiftId     Int
  date        DateTime  @db.Date
  itemId      Int
  qty         Decimal   @db.Decimal(12, 2)
  unit        String
  unitPrice   Decimal   @db.Decimal(12, 2)
  total       Decimal   @db.Decimal(12, 2)
  tableCode   String?
  note        String?
  createdAt   DateTime  @default(now())

  shift       Shift     @relation(fields: [shiftId], references: [id])
  item        MenuItem  @relation(fields: [itemId], references: [id])

  @@index([shiftId, date])
  @@index([itemId])
}

model StockAdj {
  id          Int           @id @default(autoincrement())
  shiftId     Int
  date        DateTime      @db.Date
  itemId      Int
  kind        StockAdjKind
  qty         Decimal       @db.Decimal(12, 2)
  unit        String
  unitCost    Decimal?      @db.Decimal(12, 2)
  note        String?
  createdAt   DateTime      @default(now())

  shift       Shift         @relation(fields: [shiftId], references: [id])
  item        MenuItem      @relation(fields: [itemId], references: [id])

  @@index([shiftId, date])
  @@index([itemId])
}

model ShiftCashup {
  id          Int      @id @default(autoincrement())
  shiftId     Int      @unique
  snapshot    Json
  note        String?  @db.Text
  submittedBy String?
  createdAt   DateTime @default(now())

  shift       Shift    @relation(fields: [shiftId], references: [id])

  @@index([createdAt])
}
